<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrongWay.Views.Controls.RoundButton">
    <Border Background="{Binding BorderBackground}" Padding="12,0"
            StrokeThickness="0.5" StrokeShape="RoundRectangle 50" Stroke="{Binding StrokeColor}">
        <Button Background="Transparent" FontAttributes="Bold" FontSize="20"
                Text="{Binding Text}"/>
    </Border>
</ContentView>

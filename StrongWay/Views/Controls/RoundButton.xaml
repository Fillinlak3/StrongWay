<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:self="clr-namespace:StrongWay.Views.Controls"
             x:Class="StrongWay.Views.Controls.RoundButton"
             x:DataType="self:RoundButton">
    <Border Background="{Binding BorderBackground}" Padding="0,0"
            StrokeThickness="0.5" StrokeShape="RoundRectangle 50" Stroke="{Binding StrokeColor}">
        <Button Background="Transparent" FontAttributes="{Binding TextFontAttributes}"
                FontSize="{Binding TextFontSize}" Text="{Binding Text}" TextColor="{Binding TextForegroundColor}"/>
    </Border>
</ContentView>

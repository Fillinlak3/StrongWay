<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrongWay.Views.Controls.RoundEntry">

    <Border Background="{Binding BorderBackground}" StrokeThickness="0" StrokeShape="RoundRectangle 15" Padding="12,0">
        <Entry x:Name="CustomEntry" BackgroundColor="Transparent" TextColor="Black"
               PlaceholderColor="Black" FontSize="16"
               IsPassword="{Binding IsPassword}" Text="{Binding Text, Mode=TwoWay}" Placeholder="{Binding Placeholder}"/>
    </Border>
</ContentView>

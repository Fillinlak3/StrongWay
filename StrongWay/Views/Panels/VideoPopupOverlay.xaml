<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:self="clr-namespace:StrongWay.Views.Panels"
             x:Class="StrongWay.Views.Panels.VideoPopupOverlay"
             HorizontalOptions="Fill" VerticalOptions="Fill"
             InputTransparent="False" BackgroundColor="#90000000"
             x:DataType="self:VideoPopupOverlay">

    <Grid InputTransparent="False">
        <!-- Detect press to go away -->
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="CloseOverlay"/>
        </Grid.GestureRecognizers>

        <!-- Video container -->
        <Border BackgroundColor="White"
                Padding="20"
                WidthRequest="350"
                HeightRequest="600"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                ZIndex="1"
                InputTransparent="False">
            <Border.GestureRecognizers>
                <TapGestureRecognizer/>
            </Border.GestureRecognizers>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Text="Video player here" TextColor="Black" />
                <Button Grid.Row="1" Text="asd"/>
            </Grid>
        </Border>
    </Grid>
</ContentView>
